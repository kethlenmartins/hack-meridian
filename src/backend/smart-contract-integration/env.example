# Configurações do Serviço
NODE_ENV=development
PORT=3004

# Configurações da Rede Stellar
# Valores possíveis: 'testnet' ou 'mainnet'
STELLAR_NETWORK=testnet

# CORS - Origens permitidas (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Chaves de exemplo (NÃO USE EM PRODUÇÃO)
# Para testnet, você pode usar estas chaves de exemplo:
# EXAMPLE_PUBLIC_KEY=GABC123...
# EXAMPLE_SECRET_KEY=SABC123...

# Configurações opcionais para logging
LOG_LEVEL=info

# Configurações de timeout (em segundos)
TRANSACTION_TIMEOUT=300
